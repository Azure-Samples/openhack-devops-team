pipeline {
  agent any
  environment {
    ACR_CREDENTIALS = credentials('acr-credentials')
    WEB_IMAGE_NAME = "${ACR_LOGINSERVER}/devopsoh/api-poi:${BUILD_NUMBER}"
    BUILD = "false"
  }
  stages {         
    stage('Check for changeset') {
      when { changeset "apis/poi/*" }
      steps {
        echo "This is a change in the POI"
	
	      script { 
          env.BUILD = "true"
          env.BUILD2 = "true2"
        }
      }
    }
    stage('Variable test') {
      steps {
        echo "${BUILD}"
      }
    }
    stage('Environment test') {
      /*when { environment name: 'BUILD', value: "false" }*/
      steps {
        echo "${BUILD}"
        echo "${env.BUILD}"
        echo "${env.BUILD2}"
        echo "${env.BUILD3}"
        echo "Let's do it"
      }
    }
    stage('Build POI Image') {
      when { environment name: 'BUILD', value: "true" }
      steps {
        echo 'Building POI API Docker Image...'
        echo "Should build: ${BUILD}"
        echo "${WEB_IMAGE_NAME}"
         sh '''
           # Build new image and push to ACR.
           WEB_IMAGE_NAME="${ACR_LOGINSERVER}/devopsoh/api-poi:${BUILD_NUMBER}"
           docker build -t $WEB_IMAGE_NAME ./apis/poi/web/
         '''
      }
    }
    stage('Push POI Image') {
      when { environment name: 'BUILD', value: "true" }
      steps {
        echo 'Pushing POI API Docker Image...'
        sh '''
          echo $WEB_IMAGE_NAME
          docker login ${ACR_LOGINSERVER} -u ${ACR_CREDENTIALS_USR} -p ${ACR_CREDENTIALS_PSW}
          docker push $WEB_IMAGE_NAME
        '''
      }
    }
  }
}
