pipeline {
    agent any

    tools {
        maven '3.5.4'
    }

    environment {
        APP_NAME = 'devopsoh/api-user-java'
        SRC_DIR = 'apis/user-java'
        IMG_TAG = "${env.BUILD_TAG}"
    }

    stages{  
        stage('Execute Tests and verify code coverage') {
            steps {
                dir("${env.SRC_DIR}") {
                    sh '''
                        echo "Initiating test phase."
                        mvn test verify
                    '''
                }
            }
            post {
                always {
                    junit "**/target/surefire-reports/*.xml"
                    jacoco()
                }
            }
        }
    }
}